            <section id="comentarios">
                <h1>Comentários</h1>
                <div class="comentario-adicionado">
                    <p class="info-adicionado"><strong>Guilherme Vitória</strong> no dia 19/06/2021</p>
                    <p class="comentario-adicionado-descricao">Gostei bastando da receita!</p>
                </div>
            </section>

            <form id="form-comentario">
                <div id="nome-email">
                  <div class="nome-email-detalhes">
                    <label for="nome-comentario">Nome</label>
                    <input type="text" id="nome-comentario" placeholder="Nome completo">
                  </div>

                  <div class="nome-email-detalhes">
                    <label for="email-comentario">Email</label>
                    <input type="text" id="email-comentario" placeholder="seuemail@dominio.com">
